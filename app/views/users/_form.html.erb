<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, value: t("static_pages.form_edit.name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :email, value: t("static_pages.form_edit.email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, value: t("static_pages.form_edit.pass") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, value: t("static_pages.form_edit.pass_confirm") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
