<% provide :title, t("static_pages.login.title") %>
<h1><%= t "static_pages.login.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, value: t("static_pages.form_edit.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, value: t("static_pages.form_edit.pass")%>
      <%= link_to t("views.sessions.new.forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t "static_pages.login.remember" %></span>
      <% end %>

      <%= f.submit t("static_pages.login.title"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "static_pages.login.new_user" %> <%= link_to t("static_pages.home.sign_up"), signup_path %></p>
  </div>
</div>
