<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size), micropost.user %>

  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
  <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "views.micropost.posted", ago: time_ago_in_words(micropost.created_at) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("static_pages.micropost.delete"), micropost, method: :delete,
        data: {confirm: t("static_pages.micropost.confirm")} %>
    <% end %>
  </span>
</li>
