<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_path(id: @user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "views.stats.following"%>
  </a>
  <a href="<%= followers_path(id: @user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "views.stats.followers"%>
  </a>
</div>
